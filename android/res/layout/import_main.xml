<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">

	<TextView android:id="@+id/txtDirectory" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textSize="14sp" />

	<TextView android:id="@+id/txtAvailableMaps" android:layout_below="@id/txtDirectory"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="@string/TXT_AVAILABLE_MAPS" android:textSize="16sp" />

	<ListView android:id="@+id/lsMaps" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_below="@id/txtAvailableMaps" />

</RelativeLayout>
