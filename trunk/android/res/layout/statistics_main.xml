<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
  
  <TextView android:id="@+id/numberOfNodes"
   android:layout_alignParentTop="true" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:text="@string/TXT_NUMBER_NODES"/>
  
    <View xmlns:android="http://schemas.android.com/apk/res/android" 
        android:layout_width="fill_parent" android:layout_below="@id/numberOfNodes" 
        android:layout_height="1dip"
        android:background="#ccc" />
        
        <TextView android:id="@+id/nodeNumberValues" android:layout_below="@id/numberOfNodes"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            />
        
    <TextView android:id="@+id/overrunNodes"
   android:layout_alignParentTop="true" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:text="@string/TXT_OVERRUN_NODES"/>
  
    <View xmlns:android="http://schemas.android.com/apk/res/android" 
        android:layout_width="fill_parent" android:layout_below="@id/overrunNodes" 
        android:layout_height="1dip"
        android:background="#ccc" />      
        
    <TextView android:id="@+id/overrunValues" android:layout_below="@id/overrunNodes"
              android:layout_width="fill_parent" android:layout_height="wrap_content"
              />
  
</RelativeLayout>
