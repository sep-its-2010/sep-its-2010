<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<TextView android:id="@+id/txtDiscoveredRobots"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="@string/TXT_DISCOVERED_ROBOTS" android:textSize="16sp"/>

	<ListView android:id="@+id/lsRobots" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_below="@id/txtDiscoveredRobots" />

	<Button android:id="@+id/btnSearch" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/BTN_SEARCH"
		android:layout_alignParentBottom="true" android:textSize="16sp"/>
</RelativeLayout>
