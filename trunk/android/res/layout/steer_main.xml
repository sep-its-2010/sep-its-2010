<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">

	<Spinner android:id="@+id/sp_robots" android:layout_width="wrap_content"
		android:layout_height="wrap_content"></Spinner>

	<Spinner android:id="@+id/sp_control" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_below="@id/sp_robots"></Spinner>

	<CheckBox android:text="Steuerung aktivieren" android:id="@+id/chk_activate"
		android:layout_below="@id/sp_control" android:layout_width="wrap_content"
		android:layout_height="wrap_content"></CheckBox>

	<Button android:id="@+id/btn_up" android:text="up"
		android:layout_below="@id/chk_activate" android:layout_width="fill_parent"
		android:layout_height="wrap_content"></Button>

	<Button android:id="@+id/btn_left" android:text="left"
		android:layout_below="@id/btn_up" android:layout_alignParentLeft="true"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>

	<Button android:id="@+id/btn_right" android:text="right"
		android:layout_below="@id/btn_up" android:layout_alignParentRight="true"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>

	<Button android:id="@+id/btn_down" android:text="down"
		android:layout_below="@id/btn_left" android:layout_width="fill_parent"
		android:layout_height="wrap_content"></Button>

	<TextView android:id="@+id/txt_sens" android:layout_below="@id/btn_down"
		android:layout_height="wrap_content" android:layout_width="fill_parent"></TextView>


</RelativeLayout>
